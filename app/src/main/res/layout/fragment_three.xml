
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pa.resilienciacomunitaria.org.wordvision.ThreeFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="end"
        android:scrollbars="none">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/linearLayoutCardContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


            <ImageView
                android:id="@+id/logo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/wv_logo"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:gravity="right"
                android:layout_weight="1"

                />



        <TextView
            android:id="@+id/contenido"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/logo"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="@string/mensaje"
            />

                <TextView
                    android:id="@+id/contactenos"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/contenido"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#FF7900"
                    android:textSize="18sp"
                    android:text="Contáctenos"
                    />

                <TextView
                    android:id="@+id/panama"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/contactenos"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="Panamá"
                    />

                <TextView
                    android:id="@+id/ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/panama"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:text="@string/ubicacion"
                    />

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/ubicacion"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:text="Teléfono: "
                    />

                <TextView
                    android:id="@+id/telnum"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/ubicacion"
                    android:layout_toRightOf="@+id/tel"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:text="+5073030680"
                    />

                <TextView
                    android:id="@+id/page"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/telnum"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#4078c0"
                    android:autoLink="all"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:text="@string/webUrl"
                    />


                <TextView
                    android:id="@+id/mailDir"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/telnum"
                    android:autoLink="all"
                    android:layout_toRightOf="@+id/page"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#4078c0"
                    android:textSize="15sp"
                    android:layout_marginBottom="20dp"
                    android:text="mail@mail.com
"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/urlfacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acceder"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/facebook_48" />


                    <ImageButton  android:id="@+id/urltwitter"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/urlfacebook"
                        android:layout_height="wrap_content"
                        android:text="Acceder"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/twitter_48"
                        android:layout_marginTop="16dp" />

                    <!--<ImageButton
                        android:id="@+id/urloficial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acceder"
                        android:layout_toRightOf="@+id/urltwitter"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/resil"
                        android:layout_marginTop="16dp" />-->

                </RelativeLayout>



                <TextView
                    android:id="@+id/inscribirse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FF7900"
                    android:textSize="23sp" />

                </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>