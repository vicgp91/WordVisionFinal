<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pa.resilienciacomunitaria.org.wordvision" >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/resil"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >

        <!--android:screenOrientation="portrait"-->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VerPrimerosAuxilios"
            android:label="@string/title_activity_ver_primeros_auxilios"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.v4.PARENT_ACTIVITY"
                android:value="pa.resilienciacomunitaria.org.wordvision.ThreeFragment" />
        </activity>
        <activity
            android:name=".VerInfoPrimerosAuxilios"
            android:label="@string/title_activity_ver_info_primeros_auxilios"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.v4.PARENT_ACTIVITY"
                android:value="pa.resilienciacomunitaria.org.wordvision.ThreeFragment" />
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/title_activity_splash_screen" >
        </activity>
        <activity
            android:name=".InscribiseActivity"
            android:label="@string/title_activity_inscribise"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.v4.PARENT_ACTIVITY"
                android:value="pa.resilienciacomunitaria.org.wordvision.ThreeFragment" />
        </activity>
    </application>

</manifest>
